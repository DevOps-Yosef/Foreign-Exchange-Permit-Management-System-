@model PagedList.IPagedList<ZB_FEPMS.Models.tbl_lu_MethodOfPayment>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FEPMSLayout.cshtml";
}

@using (Html.BeginForm("Create", "MethodOfPayment", FormMethod.Get))
{
    <div class="panel panel-primary">
        <div class="panel-heading">Create New Method Of Payment Form</div>
        <div class="panel-body">
            <div class="col-sm-12">

                <div>
                    <button class="btn btn-primary" type="submit">
                        <i class="glyphicon glyphicon-plus icon-white"></i>
                        <span class="button-icon-margin">Create New Method Of Payment</span>
                    </button>
                </div>

                <table id="tblDisplay" class="table table-striped table-bordered" data-page-length='5'>
                    <thead>
                        <tr>
                            <th>Method Of Payment</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "MethodOfPayment", new { id = item.Id })" id="btnEdit">
                                    <img src="@Url.Content("~/Content/images/pen.png")" style="float: center" />
                                </a>
                            </td>
                        </tr>
                    }

                </table>
                <br />
                Showing Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount of @Model.TotalItemCount entries
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

            </div>
        </div>
    </div>
}